<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="dep-12">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>lk.ijse.dep12.jpa.relationship.entity.OrderItem</class>
    <class>lk.ijse.dep12.jpa.relationship.entity.Order</class>
    <class>lk.ijse.dep12.jpa.relationship.entity.Customer</class>
    <class>lk.ijse.dep12.jpa.relationship.entity.User</class>
    <class>lk.ijse.dep12.jpa.relationship.entity.Item</class>
    <class>lk.ijse.dep12.jpa.relationship.entity.Contact</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="mysql"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:6000/dep12_jpa_pos_system?createDatabaseIfNotExist=true"/>

      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>

    </properties>

  </persistence-unit>
</persistence>
